@model IEnumerable<Shop.Application.Cart.GetCart.Response>

@{
    <div>
        <p class="title">Cart</p>
        @foreach (var product in Model)
        {
            <article class="media">
                <figure class="media-left">
                    <p class="image is-128x128">
                        <img src="~/images/iphone-37856_1280.png" />
                    </p>
                </figure>
                <div class="media-content">
                    <div class="content">
                        <p class="title">@product.Name</p>
                        <div class="level">
                            <p class="level-item">Qty: @product.Value</p>
                            <p class="level-item">Size: @product.Qty</p>
                            <p class="level-item">Price: @product.StockId</p>
                        </div>
                    </div>
                </div>
            </article>
        }
    </div>
}